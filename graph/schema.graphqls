type Post {
  id: ID!
  slug: String!
  title: String!
  coverImage: String!
  content: Content!
  description: String!
  publishedAt: String!
}

type Content {
  id: ID!
  body: String!
}

type Query {
  posts: [Post!]!
  post(slug: String!): Post
}

input NewPost {
  slug: String!
  title: String!
  coverImage: String!
  content: String!
  description: String!
  publishedAt: String!
}

type Mutation {
  createPost(input: NewPost!): Post!
}
type Article {
  id: ID!
  slug: String!
  title: String!
  date: String!
  coverImage: String!
  content: Content!
  description: String!
}

type Content {
  id: ID!
  body: String!
}

type Query {
  articles: [Article!]!
  article(slug: String!): Article
}

input NewArticle {
  slug: String!
  title: String!
  coverImage: String!
  content: String!
  description: String!
}

type Mutation {
  createArticle(input: NewArticle!): Article!
}

scalar Time